# All paths
/*
    # Block site from being framed with X-Frame-Options and CSP
    Content-Security-Policy: frame-ancestors 'none'
    X-Frame-Options: DENY

    # Prevent browsers from incorrectly detecting non-scripts as scripts
    X-Content-Type-Options: nosniff

    # Don't load any resource type not explicitly enabled
    # Disable plugins like Flash or Silverlight
    Content-Security-Policy: default-src 'none'; object-src 'none'

    # Disable referrers for browsers that don't support strict-origin-when-cross-origin
    # Uses strict-origin-when-cross-origin for browsers that do
    Referrer-Policy: no-referrer, strict-origin-when-cross-origin
